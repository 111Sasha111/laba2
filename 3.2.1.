#include <iostream>
#include <locale>
using namespace std;
 
const int N = 3;
const int M = 3;
int main()
{
    setlocale(LC_ALL,"Russian");
    int a,i;
    cout << "Введите число A (>1): ";
    cin >> a;
 
    double sum=0;
    for(i=1;sum<a;i++)
            sum+=1.0/i;
    cout << i << ": " << sum << endl;
    return 0;
}
